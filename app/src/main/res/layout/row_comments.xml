<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    app:contentPadding="2dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_ava_user_comment"
            android:src="@drawable/bellerin"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp">

        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_toRightOf="@id/img_ava_user_comment"
            android:id="@+id/tv_username_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Khoanh1997"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp">

        </TextView>
        <TextView
            android:layout_toRightOf="@id/img_ava_user_comment"
            android:layout_below="@id/tv_username_comment"
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="My comment"
            android:textColor="#000000"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:layout_toRightOf="@id/img_ava_user_comment"
            android:layout_below="@id/tv_comment"
            android:id="@+id/tv_time_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="10:00 A.m"
            android:textColor="#000000"
            android:textSize="12dp">

        </TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>