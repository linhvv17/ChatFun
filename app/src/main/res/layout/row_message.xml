<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/ic_online"
        android:id="@+id/img_view_online"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:visibility="gone">
    </de.hdodenhof.circleimageview.CircleImageView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/icon_offline"
        android:id="@+id/img_view_offline"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:visibility="gone">
    </de.hdodenhof.circleimageview.CircleImageView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_send"
        android:src="@drawable/bellerin"
        android:layout_width="60dp"
        android:layout_height="60dp">
    </de.hdodenhof.circleimageview.CircleImageView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/username_send"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="Ramsey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/message_last"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="Hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
<!--            <TextView-->
<!--                android:layout_gravity="top"-->
<!--                android:gravity="center"-->
<!--                android:id="@+id/count_message"-->
<!--                android:text="10"-->
<!--                android:textSize="20sp"-->
<!--                android:textStyle="bold"-->
<!--                android:background="#F44336"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="wrap_content">-->
<!--            </TextView>-->
            <TextView
                android:id="@+id/time_last_mess"
                android:layout_gravity="bottom"
                android:textSize="12sp"
                android:text="11:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>